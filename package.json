{
	"name": "yoda-pay-rest-api",
	"version": "1.0.0",
	"description": "REST API for fintech Yoda Pay",
	"main": "built/src/main/server.js",
	"scripts": {
		"build": "tsc",
		"start": "node ./built/src/main/server.js",
		"dev": "ts-node-dev --respawn --transpile-only src/main/server.ts",
