	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^8.6.0",
		"express": "^4.17.1",
		"joi": "^17.4.1",
		"mongoose": "^5.13.7",
		"morgan": "^1.10.0",
		"pino": "^6.12.0",
