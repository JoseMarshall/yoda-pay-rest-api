		"@types/mongoose": "^5.11.97",
		"@types/morgan": "^1.9.3",
		"@types/pino": "^6.3.9",
		"@types/supertest": "^2.0.11",
		"@types/uuid": "^8.3.1",
		"@typescript-eslint/eslint-plugin": "^4.28.4",
		"@typescript-eslint/parser": "^4.28.4",
		"eslint": "7.31.0",
		"eslint-config-airbnb": "^19.0.0",
